<!--goods.wxml-->
<!-- banner -->
<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{imgUrls}}">
    <swiper-item>
      <image src="{{item}}" data-src="{{item}}" bindtap="previewImage"></image>
    </swiper-item>
  </block>
</swiper>


<scroll-view scroll-y="true">
  <view class="detail">
    <text class="name">{{name}}</text>
    <text class="price">￥{{price}}</text>
  </view>
  <view class="separate num">
    <!-- sku选择 -->
    <text bindtap="toggleDialog" class="numtext">请选择购买数量</text>
    <view class="stepper">  
      <!-- 减号 -->  
      <text class="{{minusStatus}}" bindtap="bindMinus">-</text>  
      <!-- 数值 -->  
      <input type="number" bindchange="bindManual" value="{{num}}" />  
      <!-- 加号 -->  
      <text class="normal" bindtap="bindPlus">+</text>  
    </view>  
  </view>
  <view class="separate evaluation">
    <text>商品评价</text>
    <text class="text-remark">东西还可以，好评~</text>
  </view>
  <view class="separate info">
    <text style="">商品详情</text>
    
    <view class="infoimg">
      <image src="{{imgurl}}"  mode="widthFix"></image>
    </view>
    
  </view>
  <view class="temp"></view>
</scroll-view>

<!-- 底部悬浮栏 -->
<view class="detail-nav">
  <image bindtap="toCar" src="../demo/image/wang_light.png" />
  <view class="line_nav"></view>
  <image bindtap="addLike" src="{{isLike?'../demo/image/cart.png':'../../images/detail/detail_btn_mark_normal.png'}}" />
  <button class="button-green" bindtap="addCar" formType="submit">加入购物车</button>
  <button class="button-red" bindtap="immeBuy" formType="submit">立即购买</button>
</view>